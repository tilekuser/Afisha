@model IEnumerable<Afisha.Models.Concert>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleConcert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConcertDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationEnumId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallForPerformances)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneInfoConcert)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleConcert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationEnumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallForPerformances)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
