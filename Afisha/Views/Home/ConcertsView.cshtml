@model IEnumerable<EventsView>

@{
    ViewData["Title"] = "Concerts";
}

<div>

    @foreach (var item in Model)
    {
        <div class="AfishaBorder">
            <img src="@item.Image" width="300" height="350" />
            
            <div class="textView">
                
                <p>Location: @item.Location </p>
                <p>Ticket price from: @item.PriceTicket</p>

                <a asp-controller="Home" asp-action="DetailsPage" asp-route-Id="@item.Id" class="button">See more</a>
            </div>
        </div>
    }

</div>

<style>
    .AfishaBorder {
        border: groove;
        border-color: red;
        padding: 5px;
        margin-bottom: 20px;
        float: left;
    }

    .textView {
        font-family: Georgia
    }

    .button {
        border: 1px solid #333; /* Рамка */
        display: inline-block;
        padding: 5px 15px; /* Поля */
        text-decoration: none; /* Убираем подчёркивание */
        color: #000; /* Цвет текста */
    }
</style>